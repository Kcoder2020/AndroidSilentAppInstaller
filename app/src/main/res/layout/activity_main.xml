<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"

android:gravity="center_horizontal"
tools:context="com.example.SilentAppInstaller.MainActivity">

<TextView
    android:id="@+id/txt_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:text="Silent Installation"
    android:layout_marginTop="80dp"/>
<Button
    android:id="@+id/btn_selectapk"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:text="Select APK file"
    android:layout_margin="30dp"
    android:layout_below="@id/txt_view"
    />
<Button
    android:id="@+id/btn_open"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:text="Open Unknown Source"
    android:layout_margin="30dp"
    android:layout_below="@id/btn_selectapk"
    />
<Button
    android:id="@+id/btn_openaccess"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:text="Start accessibility"
    android:layout_below="@id/btn_open"
    android:layout_margin="30dp"
    />
<Button
    android:id="@+id/btn_access"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:text="Silent installation using accessibility"
    android:layout_below="@id/btn_openaccess"
    android:layout_margin="30dp"
    />


</RelativeLayout>